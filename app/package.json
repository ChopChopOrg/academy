{
  "name": "chop-chop-academy-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next",
    "dev": "next",
    "build": "next build && next export -o build",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "typecheck": "tsc --noEmit",
    "prettier-check": "prettier --check src/**/*",
    "codegen": "graphql-codegen --config codegen.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn typecheck"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@apollo/react-common": "^3.1.4",
    "@apollo/react-hooks": "^3.1.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@graphql-codegen/cli": "^1.13.3",
    "@graphql-codegen/introspection": "^1.13.3",
    "@graphql-codegen/typescript": "^1.13.3",
    "@graphql-codegen/typescript-operations": "^1.13.3",
    "@graphql-codegen/typescript-react-apollo": "^1.13.3",
    "@types/core-js": "^2.5.2",
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "@types/react-burger-menu": "^2.6.0",
    "@types/react-dom": "^16.9.4",
    "@types/ws": "^7.2.4",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-http": "^1.5.17",
    "apollo-link-ws": "^1.0.20",
    "babel-plugin-emotion": "^10.0.23",
    "core-js": "^3.4.7",
    "focus-visible": "^5.0.2",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "next": "^9.1.4",
    "react": "^16.12.0",
    "react-burger-menu": "^2.6.13",
    "react-dom": "^16.12.0",
    "react-hanger": "^2.1.3",
    "typescript": "^3.8.3",
    "ws": "^7.2.5"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-chop-chop": "^1.2.8",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  }
}
