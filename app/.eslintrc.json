{
  "extends": "chop-chop/prettier",
  "rules": {
    "sonarjs/no-duplicate-string": "off",
    "react/prop-types": "off",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^React$|_"
      }
    ]
  },
  "overrides": [
    {
      "files": ["pages/**/*.tsx", "pages/**/*.jsx"],
      "rules": { "import/no-default-export": "off" }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
