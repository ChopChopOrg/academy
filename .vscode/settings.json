{
  // Settings for presentation mode
  // Just comment them while developing

  // similar to GitHub theme
  // "workbench.colorTheme": "Min Light",

  // make it big
  "editor.fontSize": 24, // <
  "editor.lineHeight": 34, // <
  // "editor.fontWeight": "500", // <
  // "terminal.integrated.fontWeight": "500",
  // "terminal.integrated.fontSize": 22,

  // minimize distractions
  "window.title": "${dirty} Chop-Chop Academy${separator}${activeEditorShort}",
  "window.menuBarVisibility": "hidden",
  "editor.renderIndentGuides": false,
  "workbench.statusBar.visible": false,
  "workbench.activityBar.visible": false,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.implementationsCodeLens.enabled": false,

  // Quokka
  "quokka.showOutputOnStart": false,
  "quokka.compactMessageOutput": false,

  "[markdown]": {
    "editor.formatOnSave": false
  },

  "typescript.tsdk": "node_modules/typescript/lib",
  "typelens.showReferencesForClasses": false,
  "prettier.printWidth": 60
}
